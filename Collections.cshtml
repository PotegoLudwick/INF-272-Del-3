            @Html.EditorFor(model => model.NoOfItemsCollected, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoOfItemsCollected, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CollectionsLocations, "LocationType_ID", htmlAttributes: new { @class = "control-label col-md-2" })

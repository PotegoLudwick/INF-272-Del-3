                <input type="text" class="form-input" name="name" id="name" placeholder="Leader Id Number" />
            </div>
            @*<div class="form-group">
                <input type="text" class="form-input" name="name" id="name" placeholder="Patient ID Number" />
            </div>*@
            <div class="form-group">
                <input type="text" class="form-input" name="name" id="name" placeholder="Leader Village" />
            </div>
            @using (Html.BeginForm("Index", "Homepage"))
            {
                <input type="submit" name="btnAdd" value="Update Leader Information" />
            }
            @Html.ActionLink("Go back to home", "Index", "Homepage")
        </div>
    </div>

